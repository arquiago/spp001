---
// src/components/Header.astro
---
  <header>
    
      <a href="/" class="logo">
        <img src="/logo.png" alt="Seminar Logo" />
      </a>
      
      <nav id="main-nav">
        <a href="/about">About</a>
        <a href="/schedule">Schedule</a>
        <a href="/readings">Readings</a>
      </nav>
    
      <button id="mobile-menu-toggle" class="hamburger-button">
        <span class="line"></span>
        <span class="line"></span>
        <span class="line"></span>
      </button>
    
  </header>
  
  <style>
    header {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      z-index: 10;
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 1rem 3rem;
      background-color: rgba(0, 0, 0, 0);
      backdrop-filter: blur(10px);
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }
  
    a {
      color: white;
      text-decoration: none;
      font-weight: 500;
      display: flex;
      align-items: center;
    }
  
    .logo {
      display: flex;
      align-items: center;
    }
  
    .logo img {
      height: 100px;
    }
    
    /* --- DESKTOP NAVIGATION STYLES --- */
    
    nav {
      display: flex; /* This is the key rule that fixes the desktop layout */
    }
  
    nav a:not(:first-child)::before {
      content: '';
      display: inline-block;
      height: 1.2em;
      border-left: 1px solid rgba(255, 255, 255, 0.3);
      vertical-align: middle;
      margin: 0 1.5rem;
    }
  
    /* --- HAMBURGER BUTTON STYLES (Initially Hidden) --- */
  
    .hamburger-button {
      display: none;
      flex-direction: column;
      justify-content: space-around;
      width: 2rem;
      height: 2rem;
      background: transparent;
      border: none;
      cursor: pointer;
      padding: 0;
      z-index: 20;
    }
  
    .hamburger-button .line {
      width: 2rem;
      height: 0.25rem;
      background-color: white;
      border-radius: 10px;
    }
  
    /* --- MEDIA QUERY: All mobile styles are now safely inside here --- */
  
    @media (max-width: 768px) {
      header {
        padding: 1rem 1.5rem;
      }
  
      .hamburger-button {
        display: flex; /* Show the hamburger button on mobile */
      }
  
      /* This rule now completely overrides the desktop nav styles */
      nav {
        /* Hide the desktop nav and repurpose it as a sidebar */
        display: none;
        position: fixed;
        top: 0;
        right: -100%;
        width: 250px;
        height: 100vh;
        
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 2rem;
        
        background-color: rgba(26, 26, 26, 0.9);
        backdrop-filter: blur(20px);
        transition: right 0.3s ease-in-out;
      }
  
      nav.is-open {
        display: flex; /* Show the nav when it's the open sidebar */
        right: 0;
      }
  
      /* Remove the vertical separators in the mobile sidebar */
      nav a:not(:first-child)::before {
        display: none;
      }
    }
  </style>

<script>
  const menuToggle = document.getElementById('mobile-menu-toggle');
  const mainNav = document.getElementById('main-nav');

  if (menuToggle && mainNav) {
    menuToggle.addEventListener('click', () => {
      // Toggle the .is-open class on the nav element
      mainNav.classList.toggle('is-open');
    });
  }
</script>